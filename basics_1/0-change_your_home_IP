#!/usr/bin/env bash
# - localhost -> 127.0.0.2
# - facebook.com -> 8.8.8.8

# Remplacer localhost (idempotent)
sed -i -E 's/^[[:space:]]*127\.0\.0\.1[[:space:]]+localhost/127.0.0.2 localhost/' /etc/hosts

# Supprimer toute ligne existante pour facebook.com (idempotent)
sed -i -E '/[[:space:]]facebook\.com([[:space:]]|$)/d' /etc/hosts

# Ajouter le mapping demandÃ©
echo "8.8.8.8 facebook.com" | tee -a /etc/hosts >/dev/null
