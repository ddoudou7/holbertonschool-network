#!/usr/bin/env bash
if grep -qE '^[[:space:]]*127\.0\.0\.[0-9]+[[:space:]]+localhost([[:space:]]|$)' /etc/hosts; then
  sed -i -E 's@^[[:space:]]*127\.0\.0\.[0-9]+[[:space:]]+localhost([[:space:]]|$).*@127.0.0.2 localhost@' /etc/hosts
else
  echo '127.0.0.2 localhost' >> /etc/hosts
fi
sed -i -E '/(^|[[:space:]])facebook\.com([[:space:]]|$)/d' /etc/hosts
echo '8.8.8.8 facebook.com' >> /etc/hosts
